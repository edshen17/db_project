extends layout

block content
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3
          i.fas.fa-user-plus
          |  Register
          include ./partials/messages
        form(action='/users/register', method='POST')
          .form-group
            label(for='firstName') First Name
            input.form-control(type='firstName', name='firstName', placeholder='James', value=(firstName))
          .form-group
            label(for='lastName') Last Name
            input.form-control(type='lastName', name='lastName', placeholder='Bond', value=(firstName))
          .form-group
            label(for='username') Username
            input#username.form-control(type='username', name='username', placeholder='Enter Username', value=(username))
          .form-group
            label(for='email') Email
            input#email.form-control(type='email', name='email', placeholder='Enter Email', value=(email))
          .form-group
            label(for='password') Password
            input#password.form-control(type='password', name='password', placeholder='Create Password', value=(password))
          .form-group
            label(for='password2') Confirm Password
            input#password2.form-control(type='password', name='password2', placeholder='Confirm Password', value=(password2))
            .form-group
            label(for='streetAddress') Street Address
            input.form-control(type='text', name='streetAddress', value=(streetAddress))
          .form-group
            label(for='city') City
            input.form-control(type='text', name='city', value=(city))
          .form-group
            label(for='state') State
            input.form-control(type='text', name='state', value=(state))
          .form-group
            label(for='zip') Zip Code
            input.form-control(type='tel', pattern="[0-9\-]+" name='zip', value=(zip))
          button.btn.btn-primary.btn-block(type='submit')
            | Register
        p.lead.mt-4
          | Have An Account? 
          a(href='/users/login') Login
