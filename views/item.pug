extends layout

block content
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3
          i.fas.fa-plus
          |  Add an item
          include ./partials/messages
        form(action='/admin/create-item', method='POST')
          .form-group.form
            label(for='supplierName')
                | Supplier
                select(name='username')
                    each supplier in supplierList
                        option.form-control(value= supplier.supplierName) #{supplier.supplierName}
          .form-group
            label(for='itemName') Item Name
            input.form-control(type='itemName', name='itemName', value=(itemName) required)
          .form-group
            label(for='price') Price
            input.form-control(type='price', name='price', value=(price) required)
          .form-group
            label(for='itemDescription') Item Description
            .md-form
                textarea#textarea.md-textarea.form-control(rows='8' name='content')
          .form-group
            label(for='itemImageURL') Item Image URL
            input.form-control(type='itemImageURL', name='itemImageURL', value=(itemImageURL) required)
          .form-group
            label(for='stock') Stock
            input.form-control(type='itemImageURL', name='stock', value=(stock) required)
          button.btn.btn-primary.btn-block(type='submit')
            | Create Item
        script(src='/scripts/nicedit.js', type='text/javascript')
        script(type='text/javascript').
            bkLib.onDomLoaded(nicEditors.allTextAreas);
