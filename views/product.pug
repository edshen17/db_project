extends layout
block content
    .container-fluid
        .row
            .col-3
                img.img-thumbnail(src='' + item.itemImageURL, alt='' + item.itemName)
            .col-6
                ul.list-group
                    .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href='/item/' + item._id)
                        .flex-column
                            h3 #{item.itemName}
                            p $#{item.price} | #{item.supplier}
                            p !{item.itemDescription}
            .col-3
                ul.list-group
                    .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center(href='/item/' + item._id)
                        .flex-column
                            h4 $#{item.price}
                            span.badge.badge-info.badge-pill  #{item.stock} left in stock
                            form(action='/users/' + userId + '/item/' + item._id, method='POST' onsubmit="alert('Items added to cart!')")
                                    .form-group.form
                                        label(for='quantity')
                                            | Quantity:
                                            select(name='quantity')
                                                each number in quantity
                                                    option.form-control(value= number+1) #{number+1}
                                    if userId != 0
                                        button.btn.btn-primary.btn-block(type='submit')
                                            | Add to cart
                                    else
                                        a.btn.btn-primary(href='/users/login', role='button') Log in to purchase

                            








