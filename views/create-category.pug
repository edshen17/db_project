extends layout

block content
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3
          i.fas.fa-user-plus
          |  Add a category
          include ./partials/messages
        form(action='/admin/create-category', method='POST')
          .form-group
            label(for='categoryName') Category Name
            input.form-control(type='text', name='categoryName', value=(categoryName) required)
          button.btn.btn-primary.btn-block(type='submit')
            | Create category